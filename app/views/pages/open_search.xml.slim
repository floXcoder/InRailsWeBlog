doctype xml
OpenSearchDescription xmlns="http://a9.com/-/spec/opensearch/1.1/"
  ShortName #{ENV['WEBSITE_NAME']}
  LongName #{I18n.t('open_search.long_name', name: ENV['WEBSITE_NAME'])}
  Description #{I18n.t('open_search.description', name: ENV['WEBSITE_NAME'])}
  Tags #{I18n.t('open_search.tags')}
  AdultContent false
  Language #{I18n.locale}
  InputEncoding UTF-8
  Image height="16" width="16" type="image/vnd.microsoft.icon"
    = image_url('favicon.ico')
  Image height="32" width="32" type="image/png"
    = image_url('logos/favicon-32x32.png')
  Image height="96" width="96" type="image/png"
    = image_url('logos/favicon-96x96.png')
  Url type="text/html" template="#{send("search_#{I18n.locale}_url") + '?query={searchTerms}&amp;page={startPage?}&amp;utm_source=opensearch'}"
  Query role="example" searchTerms="cat"
